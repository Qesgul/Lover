<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/theme_bg_taki"
    android:paddingTop="6dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">
    <RelativeLayout
        android:id="@+id/RL_entries_item_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rv_item_radius_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/LL_entries_item_day"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:text="114"
                android:textColor="@color/themeColor_mistuha"
                android:textSize="30dp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/LL_entries_item_icon"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From 2017.07.12"
                    android:textSize="9dp"
                    android:textColor="@color/themeColor_mistuha"/>

                <ImageView
                    android:id="@+id/IV_entries_item_attachment"
                    android:src="@mipmap/img_heart"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:padding="1dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/LL_entries_item_icon"
                android:layout_toRightOf="@id/LL_entries_item_day"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_entries_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Together"
                    android:textColor="@color/themeColor_mistuha"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TV_entries_item_title"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/IV_diary_location_name_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/img_location" />
                    <TextView
                        android:id="@+id/TV_diary_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="中国 江苏省 苏州"
                        android:textColor="@color/themeColor_mistuha"
                        android:textSize="10dp" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rv_item_radius_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/times_bg" />
    </RelativeLayout>
</LinearLayout>